@model List<HotelsRapidApiProject.Models.HotelsViewModel.Hotel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<style>
    .ri-text h4 {
        height: 50px; /* Otel adının kaplayacağı maksimum alan */
        overflow: hidden; /* Fazlalık içeriğin taşmasını engeller */
        text-overflow: ellipsis; /* Uzun yazılar için üç nokta (...) koyar */
        white-space: nowrap; /* Metnin alt satıra geçmesini engeller */
    }


</style>

<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Otel Listesi</h2>
                    <div class="bt-option">
                        <a href="./home.html">Ana Sayfa</a>
                        <span>Oteller</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <br />
    <br />
<section class="rooms-section spad">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="room-item">
                        <img src="@item.property.photoUrls[0].Replace("square60","square1080")" style="max-width:100%;height:auto;" alt="">
                        <div class="ri-text">
                            <h4>@item.property.name</h4>
                            <h3>@item.property.priceBreakdown.grossPrice.value.ToString("#,0.00") ₺ </h3>
                          
                            <table>
                                <tbody>
                                    <tr>
                                        <td class="r-o">Puan :</td>
                                        <td>@item.property.reviewScore</td>
                                    </tr>
                                    <tr>
                                        @{
                                            var reviewTranslations = new Dictionary<string, string>
                                    {
                                    { "Excellent", "Mükemmel" },
                                    { "Wonderful", "Mükemmel" },
                                    { "Very Good", "Çok iyi" },
                                    { "Good", "İyi" },
                                    { "Fair", "Orta" },
                                    { "Pleasant", "Kötü" }
                                    };

                                            string reviewWord = item.property.reviewScoreWord;
                                            string translatedReview = reviewTranslations.ContainsKey(reviewWord) ? reviewTranslations[reviewWord] : reviewWord;
                                        }
                                        <td class="r-o">Değer :</td>
                                        <td>@translatedReview</td>
                                    </tr>
                                    <tr>
                                        <td class="r-o">Giriş Tarihi:</td>
                                        <td>@item.property.checkinDate</td>
                                    </tr>
                                        <tr>
                                            <td class="r-o">Çıkış Tarihi:</td>
                                            <td>@item.property.checkoutDate</td>
                                        </tr>
                                </tbody>
                            </table>
                            <form method="post" asp-action="HotelRoomDetail">
                                <input type="hidden" name="hotel_id" value="@item.hotel_id" />
                                <input type="hidden" name="arrival_date" value="@item.property.checkinDate" />
                                <input type="hidden" name="departure_date" value="@item.property.checkoutDate" />
                                <button class="btn primary-btn"> Detaylar</button>
                            </form>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

